{
    "name": "fw4/omnicasa-cre",
    "type": "library",
    "description": "PHP library for implementing the Omnicasa API for commercial real estate",
    "keywords": ["omnicasa", "cre", "api", "sdk"],
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "~6.0||~7.0",
        "ocramius/package-versions": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4"
    },
    "autoload": {
        "psr-4": { "OmnicasaCRE\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "OmnicasaCRE\\Tests\\": "tests/"}
    },
    "scripts": {
        "test": "@php ./vendor/bin/phpunit --colors",
        "test-coverage": "@php ./vendor/bin/phpunit --colors --coverage-html ./coverage",
		"phpinfo": "@php -i"
    },
    "config": {
        "optimize-autoloader": true
    }
}
